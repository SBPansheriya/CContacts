<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ContactsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_contact"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:drawableStart="@drawable/search"
                android:drawablePadding="10dp"
                android:hint="Search Contacts"
                android:background="@drawable/border"
                android:backgroundTint="@color/gray"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="6"
                android:layout_marginStart="10dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/gray"
                android:visibility="visible"
                android:src="@drawable/edit_pencil"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/title">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person_icon"/>

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="@font/sf_pro_text_regular"
                android:textColor="@color/darkgray"
                android:text="@string/phone"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/txt"
                android:src="@drawable/baseline_brightness_1_24" />

            <TextView
                android:id="@+id/totalcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image2"
                android:layout_marginStart="5dp"
                android:textColor="@color/darkgray"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="100 Contacts"/>

            <TextView
                android:layout_width="71dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:text="Select All"
                android:backgroundTint="@color/mediumblue"
                android:textColor="@color/blue"
                android:background="@drawable/border3"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/title2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/show_contact_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/contact_list_item"/>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            app:elevation="8dp"
            android:background="@drawable/border1"
            android:backgroundTint="@color/blue"
            android:src="@drawable/baseline_add_24"/>

    </RelativeLayout>

</FrameLayout>