<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="600dp"-->
<!--        app:cardCornerRadius="40dp">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:elevation="10dp"
        android:background="@drawable/no_color_border_sheet"
        android:orientation="vertical">

        <EditText
            android:id="@+id/dialer_contact_show"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="24dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:text="+91 6555855863"
            android:background="@null"/>

        <TextView
            android:id="@+id/add_contact_by_keypad"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_below="@+id/dialer_contact_show"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_text_medium"
            android:textColor="@color/blue"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:text="Add Number"/>

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/add_contact_by_keypad">

            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_1"/>

            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_2"/>

            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_3"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/title">

            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_4"/>

            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_5"/>

            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_6"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/title1">

            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_7"/>

            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_8"/>

            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_9"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/title2">

            <ImageView
                android:id="@+id/btn_star"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_star"/>

            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_0"/>

            <ImageView
                android:id="@+id/btn_hash"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/btn_hash"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/title3">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:src="@drawable/bnt_call"/>

            <ImageView
                android:id="@+id/btn_backpress"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/btn_backpress"/>
        </LinearLayout>
    </RelativeLayout>
<!--    </androidx.cardview.widget.CardView>-->
</LinearLayout>