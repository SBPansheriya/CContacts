<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.CreateContactActivity">

    <RelativeLayout
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cancel1"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:src="@drawable/crooss" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_toEndOf="@+id/cancel1"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Edit contacts"
            android:textAlignment="center"
            android:textColor="@color/bluetheme1"
            android:textSize="16dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/tbMenu"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/border"
        android:backgroundTint="#12000000"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:text="Save to : "
            android:textSize="14dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/border1"
            android:backgroundTint="@color/mediumblue"
            android:gravity="center"
            android:text="Phone"
            android:textColor="#6C7072"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="150dp">

            <ImageView
                android:id="@+id/update_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ellipse" />

            <!--        <de.hdodenhof.circleimageview.CircleImageView-->
            <!--            android:id="@+id/add_image"-->
            <!--            app:civ_border_width="4dp"-->
            <!--            android:src="@drawable/ic_launcher_background"-->
            <!--            android:layout_width="100dp"-->
            <!--            android:layout_height="100dp"/>-->
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Clindy"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title3"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:src="@drawable/person" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/darkgray"
                android:text="First name"/>

            <EditText
                android:id="@+id/update_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clindy"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/border2"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/darkgray"
                android:text="Last name"/>

            <EditText
                android:id="@+id/update_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warren"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/border2"
                android:padding="10dp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/call" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/darkgray"
                android:text="Phone"/>

            <EditText
                android:id="@+id/update_pphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="+91 (704) 555-0127"
                android:fontFamily="@font/sf_pro_text_regular"
                android:background="@drawable/border2"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/darkgray"
                android:text="Office"/>

            <EditText
                android:id="@+id/update_ophone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 (405) 555-0128"
                android:fontFamily="@font/sf_pro_text_regular"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/border2"
                android:padding="10dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/update_contact"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        app:backgroundTint="@color/blue"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="16dp" />

</RelativeLayout>